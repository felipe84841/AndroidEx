<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.main.MainActivity"
        android:background="@drawable/back"
>

    <TextView
            android:text="@string/MainTitle"
            android:layout_width="266dp"
            android:layout_height="81dp"
            android:id="@+id/textView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/main_title_font_size"
    />
    <ImageView
            android:src="@drawable/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:id="@+id/ivScisors" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/Main_bntPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bntPlay" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivScisors"
            style="@style/custom_button"
    />
    <Button
            android:text="@string/Main_bntRank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bntRank" app:layout_constraintEnd_toEndOf="@+id/bntPlay"
            app:layout_constraintStart_toStartOf="@+id/bntPlay" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bntPlay"
            style="@style/custom_button"
    />
    <Button
            android:text="@string/Main_bntAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bntAbout" app:layout_constraintStart_toStartOf="@+id/bntRank"
            app:layout_constraintEnd_toEndOf="@+id/bntRank" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bntRank"
            style="@style/custom_button"
    />
    <Button
            android:text="@string/Main_bntExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bntClose" app:layout_constraintEnd_toEndOf="@+id/bntAbout"
            app:layout_constraintStart_toStartOf="@+id/bntAbout" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/bntAbout"
            style="@style/custom_button"
    />
    <TextView
            android:text="@string/App_About"
            android:layout_width="149dp"
            android:layout_height="41dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>