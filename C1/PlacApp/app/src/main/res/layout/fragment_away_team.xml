<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".UI.game.awayteam.AwayTeamFragment">


    <TextView
            android:text="Time Visitante"
            style="@style/title_game_wizard"
            android:id="@+id/textView5" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="32dp" android:layout_height="46dp" android:layout_width="361dp"/>
    <TextView
            android:text="Qual é o time adiversário ?"
            style="@style/subtitle_game_wizard"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="@+id/textView5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <EditText
            style="@style/input_wizard"
            android:id="@+id/InputAwayTeam"
            app:layout_constraintStart_toStartOf="@+id/textView5" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_width="0dp" app:layout_constraintEnd_toEndOf="@+id/textView5"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="Começar o Jogo"
            style="@style/custom_button"
            android:id="@+id/bntNext"
            app:layout_constraintStart_toStartOf="@+id/InputAwayTeam" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/InputAwayTeam" android:layout_height="55dp"
            android:layout_width="0dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/InputAwayTeam"/>
</androidx.constraintlayout.widget.ConstraintLayout>