<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".UI.game.event.EventFragment">


    <TextView
            android:text="Vamos começar"
            style="@style/title_game_wizard"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="32dp" android:layout_height="39dp" android:layout_width="347dp"/>
    <TextView
            android:text="Qual o nome do evento ?"
            style="@style/subtitle_game_wizard"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="@+id/textView"/>
    <EditText
            android:layout_height="wrap_content"
            style="@style/input_wizard"
            android:id="@+id/InputEvent"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="32dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textView" android:hint="Ex: Final do Mundial de Clubes de 2019"/>
    <Button
            android:text="Próximo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bntNext"
            style="@style/custom_button"
            app:layout_constraintStart_toStartOf="@+id/InputEvent" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/InputEvent" app:layout_constraintEnd_toEndOf="@+id/InputEvent"/>
</androidx.constraintlayout.widget.ConstraintLayout>